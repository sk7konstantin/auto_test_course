import math
import os
import random
import time
from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC



link = 'https://suninjuly.github.io/explicit_wait2.html'

def func(x):
    return str(math.log(abs(12*math.sin(int(x)))))

try:
    #* Инициализация браузера и окрытие страницы
    browser = webdriver.Chrome()
    browser.implicitly_wait(5)

    browser.get(link)

    price = WebDriverWait(browser,12).until(
        EC.text_to_be_present_in_element((By.CSS_SELECTOR, 'h5#price'), '$100')
    )

    if price:
        browser.find_element(By.CSS_SELECTOR, 'button#book').click()

    x = browser.find_element(By.CSS_SELECTOR, 'span#input_value').text

    input = browser.find_element(By.CSS_SELECTOR, 'input#answer')
    input.send_keys(func(x))

    submit = browser.find_element(By.CSS_SELECTOR, 'button#solve')
    submit.click()

    alert = browser.switch_to.alert
    text = alert.text
    alert.accept()
    print(text)

    
    #! Для тестов
    # assert "Congratulations! You have successfully registered!" == welcome_text

finally:
    time.sleep(6)
    browser.quit()